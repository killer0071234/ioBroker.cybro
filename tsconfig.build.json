// Specialized tsconfig to only compile .ts-files in the src dir
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "noEmit": false,
    "declaration": false,
    "sourceMap": true
  },
  "include": ["**/*.js", "**/*.d.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "**/build",
    "node_modules/",
    "widgets/",
    "gulpfile.js"
  ]
}
